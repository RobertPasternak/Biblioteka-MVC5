@model Biblioteka.Models.AddComment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <title>Przeglądaj Zgłoszenie</title>
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h4>Przeglądaj Zgłoszenie</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()


                     <div class="form-group">
                        <label>Imię i Nazwisko:</label>
                        @Html.TextBoxFor(x => x.User, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Komentarz:</label>
                        @Html.TextBoxFor(x => x.NewComment, new { @class = "form-control" })
                    </div>

                
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Dodaj Komentarz"/>

                    <div class="btn btn-success">
                        @Html.ActionLink("Powrót", "ModeratorPanelForm")
                    </div>
                </div>
            }

        </div>
    </div>
</body>
</html>